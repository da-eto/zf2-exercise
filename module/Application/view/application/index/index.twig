{% extends 'layout/layout.twig' %}

{% block content %}
    <div class="jumbotron">
        <h1>{{ translate('Welcome to %sZF2: Vacancies%s'|format('<span class="zf-green">', '</span>')) }}</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ translate('Vacancies list') }}</h3>
                </div>

                <div class="panel-body">
                    {% if vacancies|length > 0 %}

                        <dl class="vacancies-list">
                            {% for vacancy in vacancies %}
                                <dt>{{ vacancy.name }} ({{ vacancy.department.name }})</dt>
                                <dd>{{ vacancy.description }}</dd>
                            {% endfor %}
                        </dl>

                    {% else %}

                        <p>No vacancies found.</p>

                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock content %}